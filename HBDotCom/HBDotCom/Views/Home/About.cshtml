@{
    ViewData["Title"] = "About me";
}

<div class="row position-md-relative">
    <div class="col-xs-12">
        <img class="w-100" src="~/images/banners/hello-banner.jpg" />
    </div>
    <div class="col-xs-12 position-md-absolute position-center position-md-bottom-right">
        <div class="text-inner p-2 p-md-5 text-md-light">
            <h2>@ViewData["Title"]</h2>
            <h3>@ViewData["Message"]</h3>
        </div>
        
    </div>
</div>


<div class="row">
    <div class="col">
        <h2>Hello there!</h2>
        <h4>If you're reading this you're probably interested in employing me. To download my CV&nbsp;&nbsp;&nbsp;<a class="btn btn-outline-secondary" href="~/static/HarleyBartlesCV.docx">click here</a></h4>
    </div>
</div>
<div class="panel-group">
    <div class="panel panel-default">
        <h2>Overview</h2>
    </div>
    <div id="FRONTEND" class="panel panel-default">
        <div class="panel-heading"><h3 class="panel-title wow fadeInUp">Front End Skills</h3></div>
        <div class="panel-body">
            <label for="JS">Javascript</label>
            <div id="JS" class="progress">
                <div class="progress-bar w-60 wow growBars" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100">3/5</div>
            </div>
            <label for="JQ">JQuery</label>
            <div id="JQ" class="progress">
                <div class="progress-bar w-80 wow growBars" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100">4/5</div>
            </div>
            <label for="CSS">CSS</label>
            <div id="CSS" class="progress">
                <div class="progress-bar w-80 wow growBars" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100">4/5</div>
            </div>
            <label for="HTML">HTML</label>
            <div id="HTML" class="progress">
                <div class="progress-bar w-100 wow growBars" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">5/5</div>
            </div>
            <label for="RAZOR">Razor Pages</label>
            <div id="RAZOR" class="progress">
                <div class="progress-bar w-60 wow growBars" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100">3/5</div>
            </div>
        </div>
    </div>

    <div id="BACKEND" class="panel panel-default">
        <div class="panel-heading"><h3 class="panel-title wow fadeInUp">Back End Skills</h3></div>
        <div class="panel-body">
            <label for="CS">C Sharp</label>
            <div id="CS" class="progress">
                <div class="progress-bar w-80 wow growBars" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100">4/5</div>
            </div>
            <label for="VB">Visual Basic</label>
            <div id="VB" class="progress">
                <div class="progress-bar w-60 wow growBars" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100">3/5</div>
            </div>
            <label for="PHP">PHP</label>
            <div id="PHP" class="progress">
                <div class="progress-bar w-40 wow growBars" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100">2/5</div>
            </div>
            <label for="DOTNET">ASP .Net Core</label>
            <div id="DOTNET" class="progress">
                <div class="progress-bar w-80 wow growBars" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100">4/5</div>
            </div>
            <label for="SQL">SQL Server</label>
            <div id="SQL" class="progress">
                <div class="progress-bar w-60 wow growBars" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100">3/5</div>
            </div>
        </div>
    </div>
</div>